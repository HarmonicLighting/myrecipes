<div class="row justify-content-center">
  <div class="col center">
    <h2><%= @recipe.name.capitalize %></h2>
  </div>
</div>
<div class="recipe-block">
  <div class="row">
    <div class="col-3 center">
      <%= gravatar_for(@chef)%>
      <p>
        By <%= @chef.name %>
      </p>
    </div>
    <div class="col-9">
      <h4>Steps:</h4>
      <p>
        <%= @recipe.description %>
      </p>
    </div>
  </div>
  <div class="row right">
    <div class="col">
      <%= link_to "edit it", edit_recipe_path(@recipe), class:"btn btn-outline-secondary btn-sm" %>
      <%= link_to "delete it", recipe_path(@recipe), class:"btn btn-outline-danger btn-sm", method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  </div>
</div>
<div class="row justify-content-end">
  <div class="col created-at">
    <small>Created <%= time_ago_in_words(@recipe.created_at) %> ago</small>
  </div>
</div>
<div class="row justify-content-center footer-block">
  <div class="col-2">
    <%= link_to "Go back", recipes_path, class: "btn btn-outline-info btn-sm" %>
  </div>
</div>
