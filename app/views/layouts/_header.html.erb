<div class="container-fluid">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary justify-content-between">
    <%= link_to "MyRecipes", root_path, class: "navbar-brand", id: "logo" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item ">
          <%= link_to "Our Chefs", chefs_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Recipes
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "Check all recipes", recipes_path, class:"dropdown-item" %>
            <% if logged_in? %>
            <%= link_to "Create a new recipe", new_recipe_path, class:"dropdown-item" %>
            <%= link_to "Add a new ingredient", new_ingredient_path, class:"dropdown-item" %>
            <% end %>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Ingredients
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <%= link_to "Check all ingredients", ingredients_path, class:"dropdown-item" %>
            <% if logged_in? && current_chef.admin? %>
            <%= link_to "Add a new ingredient", new_ingredient_path, class:"dropdown-item" %>
            <% end %>
          </div>
        </li>
      </ul>
      <ul class="navbar-nav">
        <% if logged_in? %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%= current_chef.admin? ? "Admin " + current_chef.name : current_chef.name %>'s profile
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink2">
            <%= link_to "Go to my profile", chef_path(current_chef), class:"dropdown-item" %>
            <%= link_to "Edit my profile", edit_chef_path(current_chef), class:"dropdown-item" %>
            <hr />
            <%= link_to "Log Out", logout_path, class:"dropdown-item", method: :delete %>
          </div>
        </li>
        <% else %>
        <li class="nav-item ">
          <%= link_to "Sign In", login_path, class: "nav-link" %>
        </li>
        <% end %>
      </ul>
