<%= form_for :session, url: login_path do |f|  %>
<div class="chef-block">
  <div class="form-group">
    <div class="row justify-content-between">
      <div class="col-12 col-sm-2">
        <%= f.label :email, "Email"  %>
      </div>
      <div class="col-12 col-sm-10">
        <%= f.email_field :email, class:"form-control", placeholder: "youremail@example.com" %>
        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="row justify-content-between">
      <div class="col-12 col-sm-2">
        <%= f.label :password, "Password"  %>
      </div>
      <div class="col-12 col-sm-10">
        <%= f.password_field :password, class:"form-control" %>
        <small class="form-text text-muted">Your password must be at least five characters long.</small>
      </div>
    </div>
  </div>
</div>
<div class="row footer-block">
  <div class="col center">
    <%= f.submit "Log in", class: "btn btn-primary btn-lg" %> <br />
    <%= link_to "[ I don't have an account ]", signup_path %>
  </div>
</div>
<% end %>
